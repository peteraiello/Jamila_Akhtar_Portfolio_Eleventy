<section class="logo-grid {{ "theme-" + (theme or "project") }} bg-white">
    {% if items %}
        <div class="container">
            <div class="grid logo-grid-wrapper">
                {%- for item in items %}
                    <div class="item {% if item.theme %}{{item.theme}} {% endif %}{% if item.span === "full" %}col-span-12{% elif item.span === "2/3" %}col-span-8{% elif item.span === "1/3" %}col-span-4{% endif %}">
                        {% if item.title %}
                            <h4 class="logo-grid__title heading-sm">{{ item.title }}</h4>
                        {% endif %}
                        {% if item.logo %}
                            <div class="logo-wrapper">
                                <div class="logo {{ "orientation-" + (item.logo.orientation or "square") }} logo-{{item.logo.name}}"><span class="visually-hidden">logo {{ item.logo.name }}</span></div>
                            </div>
                        {% endif %}
                    </div>
                {%- endfor -%}
            </div>
        </div>
    {% endif %}
</section>