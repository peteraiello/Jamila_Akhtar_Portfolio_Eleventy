<section class="image-text {{ "theme-" + (imageTextTheme or "post") }}{% if imageTextLeftToRight === true %} left-to-right {% else %} right-to-left {% endif %}{{ "bg-" + (imageText.backgroundColour or "white") }}{% if imageText.graphic %} has-graphic{% endif%}">
    <div class="container">
        <div class="grid">
            <div class="image-text-image-column">
                {% if imageTextImage.src %}
                    <div class="image-text-image__wrapper {{ "image-text-orientation__" + (imageTextImage.orientation or "portrait") }}">
                        <img loading="lazy" src="{{ imageTextImage.src }}" alt="{{ imageTextImage.altText }}" />
                    </div>
                {% endif %}
            </div>
            <div class="image-text-text-column gap-lg">
                {% if imageTextTitle %}
                    <h3 class="image-text__title {% if imageTextTheme === "project" %} heading-sm {% else %} heading-lg {% endif %}">{{ imageTextTitle }}</h3>
                {% endif %}
                {% if imageTextBlurb %}
                    <div class="image-text__content body-lead">
                        {{ imageTextBlurb | safe }}
                    </div>
                {% endif %}  
                {% if imageTextButton.link %}
                    <div class="button-wrapper">
                        <a href="{{ imageTextButton.link }}" class="{{ "button button-" + (imageTextButton.backgroundColour or "secondary") }}{% if imageTextButton.border %} w-border{% endif %}">{{ imageTextButton.text }}</a>
                    </div>
                {% endif %}
                {% if imageTextButtons %}
                    <div class="buttons-wrapper">
                        {%- for button in imageTextButtons -%}
                            <div class="button-wrapper">            
                                <a href="{{button.link}}" class="{{ "button button-" + (button.backgroundColour or "secondary") }}{% if button.border %} w-border{% endif %}">
                                    {{button.text}}
                                </a>
                            </div>
                        {% endfor %}            
                    </div>
                {% endif %}
            </div>
            {% if graphic %}
                <div class="image-text-graphic"><span class="visually-hidden">graphic</span></div>
            {% endif %}
        </div>
    </div>
</section>
