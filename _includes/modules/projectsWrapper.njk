<section>
    <div class="container-xl">        
        {% if projectsWrapper.title %}
            <h3 class="projects-wrapper__title">Portfolio</h3>
        {% endif %}
        <div class="projects-filters">
            {%- for button in projectsWrapper.filterButtons %}
                <button href="{{button.id}}" class="filter-button">{{button.label}}</button>
            {%- endfor -%}
        </div>
        <div class="projects-wrapper">
            <div class="grid">
                {%- for project in collections.projects -%}
                    {% set cardImage = project.data.thumbnail.src %}
                    {% set cardImageAlt = project.data.thumbnail.altText %}
                    {% set cardTitle = project.data.title %}
                    {% set cardExcerpt = project.data.excerpt %}      
                    {% set cardLink = project.data.permalink %}
                    {% include "../components/card.njk" %}
                {%- endfor -%}    
            </div>
        </div>
        <!-- Pagination -->
            <div class="pagination visually-hidden">
                <button>Previous</button>
                <button>1</button>
                <button>2</button>
                <button>3</button>
                <button>Next</button> 
            </div>
        <!-- / Pagination end -->
    </div>
</section> 