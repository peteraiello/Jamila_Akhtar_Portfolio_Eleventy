<section class="contact-form {{ "theme-" + (form.theme or "portfolio") }} {{ "bg-" + (form.backgroundColour or "secondary") }}">
    <div class="container">
        <div class="grid">
            <div class="column-text">
                {% if form.title %}
                    <h3 class="cta-title heading-md">{{form.title | safe }}</h3>
                {% endif %}

                {% if form.graphic %}
                    <div class="graphic-wrapper"><span class="visually-hidden">graphic</span></div>
                {% endif %}
            </div>
            <div class="column-form">
                <div class="form-wrapper">
                    <form action="https://api.web3forms.com/submit" method="POST">        
                        <!-- Web 3 Forms -->
                        <input type="hidden" name="access_key" value="65aa297b-bac6-432f-982c-99894e4e6990">

                        {% if env.environment === "production" %}
                            <input type="hidden" name="redirect" value="{{ env.production + "thank-you/" }}">
                        {% elif env.environment === "localhost" %}                               
                            <input type="hidden" name="redirect" value="{{ env.localhost + "thank-you/" }}">                            
                        {% elif env.environment === "development" %}
                                <input type="hidden" name="redirect" value="{{ env.development + "thank-you/" }}">
                            <p>{{env.production + '/thank-you/'}}</p>                
                        {% endif %}

                        <p>{{env.environment}}</p>

                        <!-- Full name -->
                        <div class="form-field-wrap">
                            <label for="full-name">Full Name</label>
                            <input type="text" name="name" placeholder="John Smith" id="full-name" required />
                        </div>
                        <!-- / Full name end -->
                        <!-- Email -->
                        <div class="form-field-wrap">
                            <label for="email">Email</label>
                            <input type="email" name="email" placeholder="john.smith@example.com" id="email" required />
                        </div>
                        <!-- / Email end -->
                        <!-- Message -->
                        <div class="form-field-wrap">
                            <label for="message">Message</label>
                            <textarea name="message" id="message" placeholder="Interested in project..." required></textarea>
                        </div>
                        <!-- / Message end --> 
                        <!-- Button start -->
                        <button type="submit" class="form-button">Submit</button>
                        <!-- / Button end -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>